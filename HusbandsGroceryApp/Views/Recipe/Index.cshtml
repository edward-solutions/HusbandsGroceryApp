@model RecipeCollection

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th class="px-4 py-3">Recipe Name</th>
            <th class="px-4 py-3">Ingredients</th>
            <th class="px-4 py-3 text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Recipes != null && Model.Recipes.Any())
        {
            @foreach (var recipe in Model.Recipes)
            {
                <tr>
                    <td class="px-4 py-3 fw-semibold">@recipe.Name</td>
                    <td class="px-4 py-3">
                        <ul class="list-unstyled mb-0 ps-3">
                            @foreach (var ingredient in recipe.Ingredients ?? new List<string>())
                            {
                                <li class="mb-1">@ingredient</li>
                            }
                        </ul>
                    </td>
                    <td class="px-4 py-3 text-center">
                        <!-- Add to Cart -->
                        <form asp-controller="Recipe" asp-action="AddToUlam" method="post" class="d-inline">
                            <input type="hidden" name="Name" value="@recipe.Name" />
                            @foreach (var ingredient in recipe.Ingredients ?? new List<string>())
                            {
                                <input type="hidden" name="Ingredients" value="@ingredient" />
                            }
                            <button type="submit" class="btn btn-success btn-sm me-1 mb-1">
                                <i class="bi bi-cart-plus"></i> Add
                            </button>
                        </form>

                        <!-- Edit -->
                        <form asp-controller="Recipe" asp-action="Edit" method="get" class="d-inline">
                            <input type="hidden" name="Name" value="@recipe.Name" />
                            <button disabled type="submit" class="btn btn-warning btn-sm me-1 mb-1">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                        </form>

                        <!-- Delete -->
                        <form asp-controller="Recipe" asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="Name" value="@recipe.Name" />
                            <button disabled type="submit" class="btn btn-danger btn-sm mb-1">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
