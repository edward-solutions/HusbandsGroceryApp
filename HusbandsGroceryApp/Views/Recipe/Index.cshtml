@model List<Recipe>
@* 
<a asp-controller="Recipes" asp-action="Create" class="btn btn-primary mb-4">
    <i class="bi bi-plus-circle"></i> Add Recipe
</a> *@
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Recipe Name</th>
            <th>Ingredients</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
        {
            <tr>
                <td>@recipe.Name</td>
                <td>
                    <ul class="list-unstyled mb-0">
                        @foreach (var ingredient in recipe.Ingredients ?? new List<string>())
                        {
                            <li>@ingredient</li>
                        }
                    </ul>
                </td>
                <td>
                    <form asp-controller="Recipe" asp-action="AddToUlam" method="post" class="d-inline">
                        <input type="hidden" name="Name" value="@recipe.Name" />
                        @foreach (var ingredient in recipe.Ingredients ?? new List<string>())
                        {
                            <input type="hidden" name="Ingredients" value="@ingredient" />
                        }
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </form>

                    <!-- Edit -->
                    <form asp-controller="Recipe" asp-action="Edit" method="get" class="d-inline">
                        <input type="hidden" name="Name" value="@recipe.Name" />
                        <button type="submit" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                    </form>

                    <!-- Delete -->
                    <form asp-controller="Recipe" asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="Name" value="@recipe.Name" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

